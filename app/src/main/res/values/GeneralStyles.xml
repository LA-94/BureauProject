<?xml version="1.0" encoding="utf-8"?>
<resources>

    <style name="ButtonStyle">
        <item name="android:layout_width">150dp</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_marginBottom">@dimen/offsetDimen</item>
        <item name="android:paddingStart">@dimen/largeOffsetDimen</item>
        <item name="android:paddingEnd">@dimen/largeOffsetDimen</item>
        <item name="android:textColor">@color/colorButtonText</item>
        <item name="android:background">@drawable/field_button</item>
    </style>

    <style name="TitleStyle">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:textColor">@color/colorItemText</item>
        <item name="android:textSize">@dimen/textTitleDimen</item>
    </style>

    <style name="ActionLayoutStyle">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">match_parent</item>
        <item name="android:layout_below">@id/toolbar</item>
        <item name="android:layout_centerVertical">true</item>
        <item name="android:layout_margin">@dimen/largeOffsetDimen</item>
        <item name="android:gravity">center</item>
        <item name="android:orientation">vertical</item>
    </style>

    <style name="HeaderStyle">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:text">@string/app_name</item>
        <item name="android:textColor">@color/colorOcean</item>
        <item name="android:textSize">@dimen/textHeaderDimen</item>
        <item name="android:layout_marginEnd">@dimen/offsetDimen</item>
    </style>

    <style name="ToolbarStyle">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">46dp</item>
        <item name="android:layout_alignParentTop">true</item>
        <item name="android:background">@color/colorItem</item>
        <item name="android:gravity">center</item>

        <item name="android:orientation">horizontal</item>
    </style>

    <style name="MainLayoutStyle">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">match_parent</item>
        <item name="android:background">@color/colorMainBackground</item>
    </style>

    <style name="ImageStyle">
        <item name="android:layout_width">@dimen/imageDimen</item>
        <item name="android:layout_height">@dimen/imageDimen</item>
    </style>

    <style name="MenuStyle">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">46dp</item>
        <item name="android:layout_alignParentBottom">true</item>
        <item name="android:orientation">horizontal</item>
        <item name="android:background">@color/colorItem</item>
    </style>

    <style name="MenuButtonStyle">
        <item name="android:layout_width">@dimen/nullDimen</item>
        <item name="android:layout_height">match_parent</item>
        <item name="android:layout_weight">1</item>
        <item name="android:background">@drawable/field_menu_button</item>
        <item name="android:paddingTop">@dimen/smallOffsetDimen</item>
        <item name="android:paddingBottom">@dimen/smallOffsetDimen</item>
        <item name="android:textColor">@color/colorItemBackground</item>
    </style>

    <style name="ViewStyle">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">@dimen/smallOffsetDimen</item>
    </style>

    <style name="LogoHeaderStyle">
        <item name="android:layout_width">@dimen/logoHeaderDimen</item>
        <item name="android:layout_height">@dimen/logoHeaderDimen</item>
        <item name="android:src">@drawable/ic_logo</item>
    </style>

    <style name="ExpressButtonStyle">
        <item name="android:layout_width">@dimen/expressButtonDimen</item>
        <item name="android:layout_height">@dimen/expressButtonDimen</item>
        <item name="android:layout_marginEnd">@dimen/largeOffsetDimen</item>
        <item name="android:layout_marginBottom">@dimen/largeOffsetDimen</item>
        <item name="android:background">@drawable/field_express_button</item>
        <item name="android:padding">@dimen/smallOffsetDimen</item>
        <item name="android:alpha">0.4</item>

    </style>

</resources>




